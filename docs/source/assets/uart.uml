@startuml
class HAL_uart {
	init()
	deinit()
	read()
	write()
	register_rx_handler()
	register_tx_handler()
	register_error_handler()
}

class LL_uart {
	reset()
	read_byte()
	read_byte_nonblock()
	write_byte()
	set_baudrate()
	enable_irq()
	disable_irq()
	get_event()
	clear_event()
	set_parity()
	set_stopbits()
	set_wordsize()
}

HAL_uart --> LL_uart
HAL_uart ..> LL_power
HAL_uart ..> LL_clock
HAL_uart ..> IRQ
@enduml
